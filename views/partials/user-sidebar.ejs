<% if (currentUser) { %>

<!-- SIDEBAR CONTENT ONLY (layout controls width & position) -->
<div class="h-full bg-black text-white flex flex-col">

  <!-- Brand -->
  <div class="px-6 py-6 border-b border-neutral-800">
    <h2 class="text-2xl font-extrabold tracking-tight">
      RIVAE
    </h2>
    <p class="text-xs tracking-widest text-neutral-500 mt-1">
      USER DASHBOARD
    </p>
  </div>

  <!-- Navigation -->
  <nav class="flex-1 px-4 py-6 space-y-1 text-sm">

    <a href="/dashboard"
       class="block px-4 py-2 rounded-md
              <%= pageTitle === 'Dashboard'
                  ? 'bg-neutral-900 text-white font-medium'
                  : 'text-neutral-400 hover:text-white hover:bg-neutral-900' %>">
      Dashboard
    </a>

    <a href="/users/profile"
       class="block px-4 py-2 rounded-md
              <%= pageTitle === 'My Profile'
                  ? 'bg-neutral-900 text-white font-medium'
                  : 'text-neutral-400 hover:text-white hover:bg-neutral-900' %>">
      My Profile
    </a>

    <a href="/orders"
       class="block px-4 py-2 rounded-md
              <%= pageTitle === 'My Orders'
                  ? 'bg-neutral-900 text-white font-medium'
                  : 'text-neutral-400 hover:text-white hover:bg-neutral-900' %>">
      My Orders
    </a>

    <a href="/"
       class="block px-4 py-2 rounded-md text-neutral-400 hover:text-white hover:bg-neutral-900">
      Home
    </a>

  </nav>

  <!-- Logout -->
  <div class="px-4 py-6 border-t border-neutral-800">
    <a href="/logout"
       class="block bg-red-600 hover:bg-red-700
              px-4 py-2 rounded text-white text-center transition">
      Logout
    </a>
  </div>

</div>

<% } %>
