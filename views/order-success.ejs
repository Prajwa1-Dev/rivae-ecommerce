<div class="max-w-3xl mx-auto px-6 py-20 text-center">

  <!-- SUCCESS ICON -->
  <div class="flex justify-center mb-8">
    <div class="w-20 h-20 rounded-full bg-black text-white
                flex items-center justify-center text-3xl">
      ✓
    </div>
  </div>

  <!-- TITLE -->
  <h1 class="text-3xl font-semibold tracking-tight text-neutral-900">
    Order Confirmed
  </h1>

  <p class="text-sm text-neutral-500 mt-3">
    Thank you for shopping with RIVAE. Your order has been placed successfully.
  </p>

  <!-- ORDER CARD -->
  <div class="mt-12 bg-white border border-neutral-200 rounded-2xl p-8 text-left">

    <!-- ORDER META -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <p class="text-xs text-neutral-400 tracking-widest uppercase">
          Order ID
        </p>
        <p class="text-lg font-medium text-neutral-900 mt-1">
          <%= order._id %>
        </p>
      </div>

      <div class="text-right">
        <p class="text-xs text-neutral-400 tracking-widest uppercase">
          Payment Method
        </p>
        <p class="text-sm font-medium text-neutral-900 mt-1">
          <%= order.paymentMethod === "COD" ? "Cash on Delivery" : "UPI" %>
        </p>
      </div>
    </div>

    <!-- ITEMS -->
    <div class="space-y-4">
      <% order.items.forEach(item => { %>
        <div class="flex justify-between text-sm">
          <span class="text-neutral-600">
            <%= item.title %> × <%= item.quantity %>
          </span>
          <span class="text-neutral-900">
            ₹<%= item.price * item.quantity %>
          </span>
        </div>
      <% }) %>
    </div>

    <hr class="my-6">

    <!-- TOTAL -->
    <div class="flex justify-between text-base font-semibold">
      <span>Total Paid</span>
      <span>₹<%= order.totalAmount %></span>
    </div>

    <!-- ADDRESS -->
    <div class="mt-8">
      <p class="text-xs text-neutral-400 tracking-widest uppercase mb-2">
        Delivery Address
      </p>
      <p class="text-sm text-neutral-700 leading-relaxed">
        <%= order.address.name %><br>
        <%= order.address.line1 %><br>
        <%= order.address.city %>, <%= order.address.state %> – <%= order.address.pincode %><br>
        Phone: <%= order.address.phone %>
      </p>
    </div>

    <!-- STATUS -->
    <div class="mt-8 flex items-center gap-2 text-sm">
      <span class="inline-block w-2 h-2 rounded-full bg-green-500"></span>
      <span class="text-neutral-700">
        Order Status: <strong><%= order.orderStatus %></strong>
      </span>
    </div>

  </div>

  <!-- ACTIONS -->
  <div class="mt-12 flex flex-col sm:flex-row justify-center gap-4">

    <a
      href="/dashboard/orders"
      class="px-8 py-3 rounded-full border border-black
             text-sm font-medium
             hover:bg-black hover:text-white
             transition">
      View My Orders
    </a>

    <a
      href="/products"
      class="px-8 py-3 rounded-full bg-black text-white
             text-sm font-medium
             hover:bg-neutral-800 transition">
      Continue Shopping
    </a>

  </div>

  <!-- FOOTNOTE -->
  <p class="text-xs text-neutral-400 mt-10">
    A confirmation message has been sent to your registered contact details.
  </p>

</div>
