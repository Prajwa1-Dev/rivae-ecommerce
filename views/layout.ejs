<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
  <title>
    RIVAE<%= pageTitle ? " | " + pageTitle : "" %>
  </title>

  <link rel="stylesheet" href="/stylesheets/output.css">

  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
    rel="stylesheet"
  >

  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>

<%
  hideChrome = hideChrome ?? false;
  isAdminPage = isAdminPage ?? false;
  isAuthPage = isAuthPage ?? false;
%>

<body class="<%= isAuthPage ? 'bg-black text-white' : 'bg-neutral-50 text-neutral-900' %>">

<!-- ================= NAVBAR ================= -->
<% if (!hideChrome && !isAdminPage && !isAuthPage) { %>
<header class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-neutral-200">

  <div class="max-w-7xl mx-auto px-6 py-5 flex items-center justify-between">

    <!-- BRAND -->
    <a href="/"
       class="text-3xl font-black tracking-[0.15em] uppercase">
      RIVAE
    </a>

    <!-- DESKTOP NAV -->
    <nav class="hidden md:flex gap-12 text-xs font-medium tracking-[0.2em]">
      <a href="/" class="hover:opacity-70">HOME</a>
      <a href="/products" class="hover:opacity-70">SHOP</a>
      <a href="/cart" class="hover:opacity-70">CART</a>
    </nav>

    <!-- ACTIONS -->
    <div class="flex items-center gap-7">

      <!-- CART (UNCHANGED ICON) -->
      <a href="/cart" class="hover:scale-110 transition">
        <svg class="w-7 h-7 stroke-black" fill="none" viewBox="0 0 24 24">
          <path d="M6 6h15l-1.5 9h-12z" stroke-width="2"/>
          <circle cx="9" cy="21" r="1"/>
          <circle cx="18" cy="21" r="1"/>
        </svg>
      </a>

      <% if (currentUser) { %>
        <!-- ACCOUNT ICON (UNCHANGED) -->
        <a href="/dashboard" title="Account">
          <svg class="w-7 h-7 stroke-black" fill="none" viewBox="0 0 24 24">
            <circle cx="12" cy="8" r="4" stroke-width="2"/>
            <path d="M4 20c1.5-4 6.5-4 8-4s6.5 0 8 4" stroke-width="2"/>
          </svg>
        </a>

        <!-- LOGOUT -->
        <a href="/logout"
           class="hidden md:inline text-xs tracking-widest hover:opacity-60">
          LOGOUT
        </a>
      <% } else { %>
        <a href="/login"
           class="hidden md:inline text-xs tracking-widest uppercase
                  border border-black px-5 py-2 rounded-full
                  hover:bg-black hover:text-white transition">
          LOGIN
        </a>
      <% } %>

      <!-- MOBILE MENU BUTTON -->
      <button
        id="mobileMenuBtn"
        class="md:hidden text-xl font-bold">
        ☰
      </button>

    </div>
  </div>

  <!-- MOBILE MENU -->
  <div
    id="mobileMenu"
    class="hidden md:hidden border-t bg-white px-6 py-6 space-y-4 text-sm">

    <a href="/" class="block font-medium">Home</a>
    <a href="/products" class="block font-medium">Shop</a>
    <a href="/cart" class="block font-medium">Cart</a>

    <hr>

    <% if (currentUser) { %>
      <a href="/dashboard" class="block font-medium">My Account</a>
      <a href="/logout" class="block font-medium text-red-600">Logout</a>
    <% } else { %>
      <a href="/login"
         class="block text-center border border-black py-2 rounded-full">
        Login
      </a>
    <% } %>

  </div>
</header>
<% } %>

<!-- ================= MAIN ================= -->
<main class="min-h-screen px-4 sm:px-6 py-8">
  <%- body %>
</main>

<!-- ================= FOOTER ================= -->
<% if (!hideChrome && !isAdminPage && !isAuthPage) { %>
<footer class="bg-black text-white py-16">
  <div class="max-w-7xl mx-auto px-6
              grid grid-cols-1 md:grid-cols-3 gap-12
              text-center md:text-left">

    <div>
      <h3 class="text-3xl font-black">RIVAE</h3>
      <p class="text-sm text-neutral-400 mt-3">
        Premium menswear crafted with precision and intent.
      </p>
    </div>

    <div>
      <h4 class="font-semibold mb-3">SHOP</h4>
      <ul class="space-y-2 text-neutral-300 text-sm">
        <li><a href="/products" class="hover:underline">Menswear</a></li>
      </ul>
    </div>

    <div>
      <h4 class="font-semibold mb-3">SUPPORT</h4>
      <ul class="space-y-2 text-neutral-300 text-sm">
        <li><a href="/contact" class="hover:underline">Contact</a></li>
        <li><a href="/policy" class="hover:underline">Return Policy</a></li>
      </ul>
    </div>

  </div>

  <p class="text-neutral-500 text-sm mt-14 text-center">
    © <%= new Date().getFullYear() %> RIVAE. All rights reserved.
  </p>
</footer>
<% } %>

<!-- CSP SAFE SCRIPT -->
<script src="/js/navbar.js" defer></script>

</body>
</html>
