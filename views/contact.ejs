<!-- ================= HERO ================= -->
<section class="bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-16 sm:py-24 text-center">
    <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-tight">
      Contact RIVAE
    </h1>
    <p class="mt-4 sm:mt-6 text-neutral-400 max-w-xl mx-auto text-base sm:text-lg">
      Questions, support, or collaborations — we’re here to help.
    </p>
  </div>
</section>

<!-- ================= CONTACT SECTION ================= -->
<section class="max-w-7xl mx-auto px-4 sm:px-6 py-16 sm:py-24">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16">

    <!-- LEFT INFO -->
    <div>
      <h2 class="text-2xl sm:text-3xl font-bold tracking-tight">
        Get in Touch
      </h2>

      <p class="mt-4 sm:mt-6 text-neutral-600 leading-relaxed text-sm sm:text-base">
        Whether you need help with an order, have a product inquiry,
        or want to collaborate with RIVAE — reach out anytime.
      </p>

      <div class="mt-8 sm:mt-10 space-y-5 text-sm">

        <div>
          <p class="uppercase tracking-widest text-neutral-400 text-xs mb-1">
            Email
          </p>
          <p class="font-medium break-all">
            prajwalmashewadi.99@gmail.com
          </p>
        </div>

        <div>
          <p class="uppercase tracking-widest text-neutral-400 text-xs mb-1">
            Business Hours
          </p>
          <p class="font-medium">
            Monday – Saturday · 10:00 AM – 6:00 PM
          </p>
        </div>

        <div>
          <p class="uppercase tracking-widest text-neutral-400 text-xs mb-1">
            Location
          </p>
          <p class="font-medium">
            Nippani, India
          </p>
        </div>

      </div>
    </div>

    <!-- RIGHT FORM -->
    <div class="bg-white border border-neutral-200 rounded-2xl sm:rounded-3xl p-6 sm:p-8 md:p-10 shadow-sm">

      <h3 class="text-lg sm:text-xl font-semibold tracking-wide">
        Send a Message
      </h3>

      <!-- FLASH MESSAGES -->
      <% if (success && success.length) { %>
        <div class="mt-5 text-sm text-green-700 bg-green-50 border border-green-200 px-4 py-3 rounded-xl">
          <%= success[0] %>
        </div>
      <% } %>

      <% if (error && error.length) { %>
        <div class="mt-5 text-sm text-red-700 bg-red-50 border border-red-200 px-4 py-3 rounded-xl">
          <%= error[0] %>
        </div>
      <% } %>

      <form action="/contact" method="POST" class="mt-6 sm:mt-8 space-y-5 sm:space-y-6" novalidate>

        <!-- NAME -->
        <div>
          <label class="block text-xs uppercase tracking-widest text-neutral-400 mb-2">
            Full Name
          </label>
          <input
            type="text"
            name="name"
            required
            placeholder="Your full name"
            class="w-full border border-neutral-300 rounded-xl px-4 py-3
                   text-sm focus:outline-none focus:border-black transition"
          />
        </div>

        <!-- EMAIL -->
        <div>
          <label class="block text-xs uppercase tracking-widest text-neutral-400 mb-2">
            Email
          </label>
          <input
            type="email"
            name="email"
            required
            placeholder="you@example.com"
            class="w-full border border-neutral-300 rounded-xl px-4 py-3
                   text-sm focus:outline-none focus:border-black transition"
          />
        </div>

        <!-- MESSAGE -->
        <div>
          <label class="block text-xs uppercase tracking-widest text-neutral-400 mb-2">
            Message
          </label>
          <textarea
            name="message"
            rows="4"
            required
            placeholder="Tell us how we can help you…"
            class="w-full border border-neutral-300 rounded-xl px-4 py-3
                   text-sm focus:outline-none focus:border-black transition resize-none"
          ></textarea>
        </div>

        <!-- SUBMIT -->
        <button
          type="submit"
          class="w-full mt-2 sm:mt-4 border border-black py-3 rounded-xl
                 text-xs tracking-widest uppercase font-medium
                 hover:bg-black hover:text-white
                 transition">
          Send Message
        </button>

      </form>
    </div>

  </div>
</section>
