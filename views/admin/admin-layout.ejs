<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>RIVAE ADMIN <%= pageTitle ? " | " + pageTitle : "" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="/stylesheets/output.css">
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
    rel="stylesheet"
  >
</head>

<body class="bg-neutral-100 min-h-screen overflow-x-hidden">

<%
  active = typeof active === "undefined" ? "" : active;
%>

<!-- MOBILE OVERLAY -->
<div
  id="adminSidebarOverlay"
  class="fixed inset-0 bg-black/40 hidden z-30 md:hidden">
</div>

<div class="flex min-h-screen">

  <!-- SIDEBAR -->
  <aside
    id="adminSidebar"
    class="
      fixed inset-y-0 left-0 w-64 bg-black text-white z-40
      transform -translate-x-full
      md:translate-x-0
      transition-transform duration-300 ease-out
    "
  >
    <div class="h-full p-8 space-y-10">

      <!-- BRAND -->
      <a
        href="/admin/dashboard"
        class="text-2xl font-extrabold tracking-tight block"
      >
        RIVAE
      </a>

      <!-- NAV -->
      <nav class="space-y-3 text-neutral-300 text-sm font-medium tracking-wide">

        <a
          href="/admin/dashboard"
          class="block px-3 py-2 rounded hover:bg-neutral-800 transition
                 <%= active === 'dashboard' ? 'bg-neutral-800 text-white' : '' %>"
        >
          üìä Dashboard
        </a>

        <a
          href="/admin/products"
          class="block px-3 py-2 rounded hover:bg-neutral-800 transition
                 <%= active === 'products' ? 'bg-neutral-800 text-white' : '' %>"
        >
          üõçÔ∏è Products
        </a>

        <a
          href="/admin/orders"
          class="block px-3 py-2 rounded hover:bg-neutral-800 transition
                 <%= active === 'orders' ? 'bg-neutral-800 text-white' : '' %>"
        >
          üì¶ Orders
        </a>

        <a
          href="/admin/products/add"
          class="block px-3 py-2 rounded hover:bg-neutral-800 transition"
        >
          ‚ûï Add Product
        </a>

        <a
          href="/admin/logout"
          class="block mt-8 bg-red-600 hover:bg-red-700
                 px-4 py-2 rounded text-white text-center transition"
        >
          Logout
        </a>

      </nav>
    </div>
  </aside>

  <!-- MAIN WRAPPER -->
  <div class="flex-1 md:ml-64 flex flex-col min-h-screen">

    <!-- TOP BAR (MOBILE ONLY) -->
    <header
      class="md:hidden flex items-center justify-between
             px-4 py-3 bg-white border-b sticky top-0 z-20">

      <button
        id="adminMenuToggle"
        aria-label="Open admin menu"
        class="p-2 rounded-md border border-gray-300
               active:scale-95 transition">
        ‚ò∞
      </button>

      <span class="font-semibold text-sm tracking-wide">
        RIVAE Admin
      </span>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-4 sm:p-6 lg:p-8">
      <div class="max-w-7xl mx-auto">
        <%- body %>
      </div>
    </main>

  </div>
</div>

<!-- ADMIN SIDEBAR SCRIPT -->
<script src="/js/admin-sidebar.js"></script>

</body>
</html>
