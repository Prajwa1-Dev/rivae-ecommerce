<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>
    RIVAE<%= pageTitle ? " | " + pageTitle : "" %>
  </title>
<link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="/stylesheets/output.css">

  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
    rel="stylesheet"
  >
</head>

<body class="bg-neutral-50 text-neutral-900 overflow-x-hidden">

  <!-- MOBILE OVERLAY -->
  <div
    id="sidebarOverlay"
    class="fixed inset-0 bg-black/40 hidden z-30 md:hidden">
  </div>

  <!-- DASHBOARD WRAPPER -->
  <div class="flex min-h-screen">

    <!-- SIDEBAR -->
    <aside
      id="sidebar"
      class="
        fixed inset-y-0 left-0 w-64 bg-white border-r z-40
        transform -translate-x-full
        md:translate-x-0
        transition-transform duration-300 ease-out
      ">
      <%- include('../partials/user-sidebar') %>
    </aside>

    <!-- MAIN CONTENT WRAPPER -->
    <div class="flex-1 md:ml-64 flex flex-col min-h-screen">

      <!-- TOP BAR (MOBILE ONLY) -->
      <header
        class="md:hidden flex items-center justify-between
               px-4 py-3 bg-white border-b sticky top-0 z-20">

        <button
          id="menuToggle"
          aria-label="Open menu"
          class="p-2 rounded-md border border-gray-300
                 active:scale-95 transition">
          â˜°
        </button>

        <span class="font-semibold text-sm tracking-wide">
          RIVAE
        </span>
      </header>

      <!-- MAIN CONTENT -->
      <main class="flex-1 p-4 sm:p-6 lg:p-8 bg-neutral-50 overflow-y-auto">
        <%- body %>
      </main>

    </div>

  </div>

  <!-- SIDEBAR SCRIPT -->
  <script src="/js/sidebar.js"></script>

</body>
</html>
